            </goals>
            <properties>
                <exec.args>-Dlog4j.configuration=log4j.properties -classpath %classpath de.david.hadoop.test2.LabelCount input output output2</exec.args>
                <exec.executable>java</exec.executable>
                <exec.workingdir></exec.workingdir>
            </properties>
        </action>
        <action>
            <actionName>clean</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
            </goals>
            <properties>
                <exec.args>-rf output</exec.args>
                <exec.executable>rm</exec.executable>
            </properties>
        </action>
    </actions>
